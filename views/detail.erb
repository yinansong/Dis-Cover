<section id="detail">
  <a href="/manholecovers"><img class="close" src="../images/nonmanholes/close.png"></a>
  <div class="major_image">
      <img class="big_image" src="../<%= @chosen_manhole["img"] %>">
      <div class="description">
        <p class="meta_text">
          Location:&nbsp;
          <span class="meta_content">
            <a href="/city/<%= @chosen_manhole["city"] %>"><%= @chosen_manhole["city"] %></a>,
            <a href="/province_or_state/<%= @chosen_manhole["province_or_state"] %>"><%= @chosen_manhole["province_or_state"] %></a>,
            <a href="/country/<%= @chosen_manhole["country"] %>"><%= @chosen_manhole["country"] %></a>
          </span>
        </p><br>
        <p class="meta_text" id="meta_year">
          Year:&nbsp;
          <a href="/year/<%= @chosen_manhole["year"] %>"><span class="meta_content"><%= @chosen_manhole["year"] %></span></a>
        </p>
        <br>
        <p class="meta_text" id="meta_info">Note:&nbsp;<span class="meta_content"><%= @chosen_manhole["note"] %></span></p><br>
        <p class="meta_text">Tags:&nbsp;<span class="meta_content"><%= @chosen_manhole["tags"] %></span></p>
        <br>
        <br>
        <br>
        <a href="/manholecovers/<%= @id %>/edit" class="edit">EDIT</a>&nbsp;&nbsp;&nbsp;&nbsp;<a href="/manholecovers/<%= @id %>/delete" class="delete">DELETE</a>
      </div>
  </div>
  <div id="related_image_part">
    <div id="divider"></div>
    <div class="related_image">
      <img class="small_image" src="../images/20130527_0146.png">
      <img class="small_image" src="../images/20130527_0224.png">
      <img class="small_image" src="../images/20130528_0073.png">
    </div>
  </div>
</section>



