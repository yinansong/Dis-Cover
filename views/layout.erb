<!doctype html>
<html lang="en">
<html>
  <head>
    <meta charset="utf-8">

    <title>Dis-Cover</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Google fonts -->
    <link href='http://fonts.googleapis.com/css?family=Lato|Hammersmith+One' rel='stylesheet' type='text/css'>

    <!-- stylesheets -->
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" media="all">

    <!-- javascript and jquery -->
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

    <script src="pace/pace.min.js"></script>
    <link href="pace/style1.css" rel="stylesheet" />

    <script type="text/javascript">
      $(document).ready(function() {
        $(".item").draggable(
          {cursor: "move",
          cursorAt: { top: 100, left: 100},
          containment: "body"
          }
        );
      });
    </script>

    <script type="text/javascript">
    //for order after drag
    $(document).ready(function() {
      $('.item').draggable().on('mousedown', function() {
        $('.item').not(this).css('z-index', '100');
        $(this).css('z-index', '998');
      });
      $('button').click(function() {
        $(this).closest('div.item').hide(0);
        });
    });
    </script>

  </head>

  <body onload='setDivPos();'>
    <!-- menu bar -->
    <div id="menu">
      <table id="menu_table">
        <thead>
          <th>
            <div id="about">
              <a id="about_tb_text" href="/about">ABOUT</a>
            </div>
          </th>
          <th> | <th>
          <th><div id="blog">
              <a id="blog_tb_text" href="/blog">BLOG</a>
            </div>
          </th>
          <th> | <th>
          <th><a id="shuffle" href="/manholecovers">SHUFFLE<a></th>
          <th> | <th>
          <th>
            <div id="add">
              <a id="add_tb_text" href="/manholecovers/add">ADD</a>
            </div>
          </th>
        </thead>
      </table>
    </div>

    <div id="menu_right">
      <% if session[:access_token] %>
        <a href="/logout">LOGOUT</a>
      <% else %>
        <a href="<%= @fb_login_url %>">LOGIN</a>
      <% end %>
    </div>

    <%= yield %>

    <script>

      function setDivPos() {
        $('.item').each(function(idx, el){
          var x = Math.floor(Math.random()*1200);
          var y = Math.floor(Math.random()*750);
          console.log(el);
          el.style.left = x + 'px';
          el.style.top = y + 'px';
        });
      }

      $(".meta_box").hide();

      $(".item").mouseover(function(event) {
        var index = parseInt( event.target.id.match(/\d+/), 10 );
        $("#item" + index).css
        $(".meta_box").hide();
        $("#meta_box" + index).show();
      });

      $(".item").mouseout(function(event) {
        $(".meta_box").hide();
      });
    </script>

  </body>
</html>
